# PLAYLIST API (POST form-urlencoded)
# URL и query-параметры соответствуют curl из ТЗ
PLAYLIST_BASE_URL=https://pl.iptv2021.com/api/v4/playlist
PLAYLIST_PARAMS_TZ=3
PLAYLIST_PARAMS_REGION=0
PLAYLIST_PARAMS_NATIVE_REGION_ONLY=1
PLAYLIST_PARAMS_LIMIT=0
PLAYLIST_PARAMS_PAGE=1
PLAYLIST_PARAMS_EPG=0
# Момент установки приложения (epoch). Может быть пустым
PLAYLIST_PARAMS_INSTALLTS=
PLAYLIST_PARAMS_NEED_CATEGORIES=1
PLAYLIST_PARAMS_PODCASTS=1

# Заголовки для playlist (по умолчанию наследуют IPTV_* если не заданы)
# Если токен отсутствует, оставьте пустым.
PLAYLIST_HEADER_HOST=pl.iptv2021.com
PLAYLIST_HEADER_UA=Mozilla/5.0 (Linux; Android 11; SM-A127F Build/RP1A.200720.012; wv) AppleWebKit/537.36 (KHTML, like Gecko) Version/4.0 Chrome/136.0.7103.125 Mobile Safari/537.36
PLAYLIST_HEADER_X_LHD_AGENT={"generation":2,"sdk":30,"version_name":"5.7.9","version_code":848,"platform":"android","device_id":"423f503e3c4ee9c8","name":"samsung+SM-A127F","app":"com.infolink.limeiptv"}
PLAYLIST_HEADER_X_TOKEN=

# Данные формы (URL-encoded)
PLAYLIST_FORM_SUBS_PACKS=[]
PLAYLIST_FORM_Y_SUBS_PACKS=[]
# payload может быть длинным base64/строкой. Вставьте без переносов строк
PLAYLIST_FORM_PAYLOAD=

# HTTP
HTTP_TIMEOUT=30
HTTP_RETRIES=3
HTTP_BACKOFF=0.5

# Кэш
CACHE_ENABLED=true
CACHE_PATH=cache/http_cache
CACHE_EXPIRE=3600

# КиноПоиск (опционально)
KINOPOISK_API_KEY=596756ae-256d-4861-89db-b0e67f931fe3
KINOPOISK_BASE_URL=https://api.kinopoisk.dev/v1.4

# TMDB (опционально)
TMDB_API_KEY=35518ecf03864aa2829c0585408346c9
TMDB_BASE_URL=https://api.themoviedb.org/3
TMDB_IMAGE_BASE=https://image.tmdb.org/t/p/w500

# Логи
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_CACHE_TTL=300
# Список разрешенных origin через запятую. Пример: http://localhost:3000,http://127.0.0.1:3000
API_CORS_ORIGINS=*

# Pipeline
# Включить автозапуск пайплайна (fetch->filter->enrich) при старте API
AUTO_RUN_PIPELINE=true
